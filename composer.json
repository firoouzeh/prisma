{
  "name": "odan/prisma",
  "type": "project",
  "description": "A skeleton project for Slim 3",
  "keywords": [
    "slim",
    "skeleton"
  ],
  "homepage": "https://github.com/odan/prisma",
  "license": "MIT",
  "require": {
    "php": "^7.2",
    "cakephp/chronos": "^1.2",
    "cakephp/database": "^3.7",
    "monolog/monolog": "^1.18",
    "odan/csrf": "^2.1",
    "odan/phinx-migrations-generator": "^4",
    "odan/session": "^3.1",
    "odan/twig-assets": "^2.1.1",
    "odan/twig-translation": "^1.2",
    "slim/slim": "^3.12",
    "slim/twig-view": "^2.4",
    "symfony/console": "^4",
    "symfony/translation": "^4"
  },
  "require-dev": {
    "gettext/gettext": "^4.6",
    "phpunit/phpunit": "^7.0",
    "phpstan/phpstan-shim": "^0.11"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/Utility/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit --configuration ./phpunit.xml",
    "test-coverage": "phpunit --configuration ./phpunit.xml --coverage-text --coverage-clover ./build/logs/clover.xml --coverage-html ./build/coverage"
  }
}
